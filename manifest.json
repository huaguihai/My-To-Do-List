{
  "manifest_version": 2,
  "name": "My To-Do List Extension",
  "version": "1.0",
  "description": "A to-do list manager that shows pending tasks every time you open a new tab.",
  "permissions": ["storage"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
